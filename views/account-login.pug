extends account-layout.pug

include utils.pug

block content
    +validationErrorSummary(errors)
    form(action='/account/login' method='post')
        input(type='hidden' name='_csrf' value=csrfToken)
        +field('Enter your email', 'email', email)
        +field('Enter your password', 'password', null, 'password')
        div(class='py-4')
            button(type='submit' class='btn btn-primary') Login
    div
    p: a(href='/account/sign-up') Sign up
