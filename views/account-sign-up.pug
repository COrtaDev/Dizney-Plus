extends account-layout.pug

include utils.pug

block content
    +validationErrorSummary(errors)
    div.form
        form(action='/account/sign-up' method='post')
            input(type='hidden' name='_csrf' value=csrfToken)
            p.form__label Log in with your email
            +field('email', account.email)
            p.form__label Enter your password
            +field('password', account.password, 'password')
            button.form__submit(type='submit') Sign up
