include utils.pug
doctype html
html
    head
        title #{title} | Dizney+
form(action='account/sign-up' method='post')
    input(type='hidden' name='_csrf' value=csrfToken)
    +field('Enter your email', 'email', account.email)
    +field('Create a password', 'password', account.password, 'password')
    div(class='py-4')
        button(type='submit' class='btn btn-primary') Continue
        