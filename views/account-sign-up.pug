extends account-layout.pug

include utils.pug

block content
    +validationErrorSummary(errors)
    form(action='/account/sign-up' method='post')
        input(type='hidden' name='_csrf' value=csrfToken)
        +field('email', account.email)
        +field('password', account.password, 'password')
        div(class='py-4')
            button(type='submit' class='btn btn-primary') Continue
