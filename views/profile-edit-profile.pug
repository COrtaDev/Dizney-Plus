doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    link(rel='icon' href='https://dizneyplus.s3.us-east-2.amazonaws.com/images/disneyPlusRips/favicon.ico' type='image/x-icon')
    script(src="https://kit.fontawesome.com/563691f269.js" crossorigin="anonymous")
    script(src='/scripts/select-avatar.js'  type ='text/javascript')
    style
      include ../public/style/profiles.css
      include ../public/style/isKid-button.css
    title #{title} | Dizney+
  body
    include utils.pug
    div.editMenu
      div.addMenu_left
        form(action='/profiles/add:id' method='post')
          p.addMenu_label Edit Profile
          div.addMenu_left--form
            +field('name', name,'text', 'Profile Name')
            label.toggle-control
              input(type='checkbox' checked='checked')
              span.control
            button.editMenu_submit(type='submit') Save
            p: a.delete(href='/profiles/delete') Delete Profile
      div.right
        a(href=`/profiles/select-avatar`): img#newAvatar(src="")
